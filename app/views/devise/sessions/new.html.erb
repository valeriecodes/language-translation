<div class="User-content">
    <%= form_for resource, as: resource_name, url: session_path(resource_name), html: {class: "Form", name: "loginform" } do |f| %>
	<%= devise_error_messages! %>
       <div class="Form-group">
            <%= f.label :username, for: "username" %>
            <%= f.text_field :username, autofocus: true, class: "Form-control", id: "username", placeholder: "" %>
        </div>
        <div class="Form-group">
            <%= f.label :password, "Password" %><br />
            <%= f.password_field :password, autocomplete: "off", class: "Form-control" %>

        </div>
        <div class="Form-group">
            <% if devise_mapping.rememberable? -%>
                <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me, "Remember Me" %>
                </div>
            <% end -%>
        </div>
        <div>
            <%= f.submit "Log in", class: "button button--primary" %>
            <%= link_to "Forgot Password?" , new_user_password_path, title: "Password Lost and Found", class: "u-fr links u-links" %>
        </div>
    <% end %>
</div>

<div class="User-footer">
    <p class="u-pushTop20">
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
            <%= link_to "Donâ€™t have an account? Sign up", new_registration_path(resource_name), class: "links u-links" %>
        <% end -%>
    </p>
</div>
