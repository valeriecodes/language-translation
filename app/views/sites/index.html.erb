<h1>Listing sites</h1>
 
<br />
<!-- table class="reference" style="width:45%; border:5; cellpadding:4; cellspacing:3" -->
<table class="table table-striped">
  <tr>
    <th>Post</th>
    <th>Site</th>
<% if current_user.role == 'Admin' %>
    <th colspan="2"></th>
<% else %>
    <th colspan="2"></th>
<% end %>
  </tr>
 
  <% @sites.each do |site| %>
    <tr>
      <td><%#= site.installation.installation %></td>
      <td><%= site.name %></td>
      <td><%= link_to 'Show', site_path(site) %></td>
      <td><%= link_to 'Edit', edit_site_path(site) %>
<% if current_user.role == 'Admin' %>
      <%= link_to 'Delete', site_path(site), method: :delete, class: "btn btn-danger btn-xs", data: { confirm: 'Are you sure?' } %></td>
<% end %>
    </tr>
  <% end %>
</table>
<hr/>
